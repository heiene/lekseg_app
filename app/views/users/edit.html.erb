<% provide(:title, 'Edit user') %>

<h1>Update your profile</h1>
	<div class="row">
		<div class="span6 offset6">
			<%= form_for(@user) do |f| %>
			<%= render 'shared/user_form', f: f %>
			<%= f.submit "Save changes", class: "btn btn-medium btn-info"%>			
			<% end %>
		</div>
		<%= gravatar_for @user %>
		<a href='http://gravatar.com/emails'>change</a>
	</div>
