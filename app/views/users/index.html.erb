<% provide(:title, 'All users') %>
<h1>All users</h1>
<div class= "offset3">
	<%= will_paginate %>
	<ul class="users">
			<% @users.each do |u|%>
				<li>
					<%= gravatar_for u, size: 30 %>
					<%= link_to u.name, u %>
					 	<% if current_user.admin? && !current_user?(u) %>
    					| <%= link_to "delete", u, method: :delete,
                                  data: { confirm: "You sure?" } %>
           	<% end %>
				</li>
			<% end %>
	</ul>
	<%= will_paginate %>
</div>
